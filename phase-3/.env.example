# Database - Neon Postgres connection string
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Authentication - Shared secret for JWT verification between frontend and backend
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secure-random-string-at-least-32-chars
JWT_ALGORITHM=HS256

# API URL - Backend API URL for frontend to call
# For local development:
NEXT_PUBLIC_API_URL=http://localhost:8000
# For production (Hugging Face Spaces backend):
# NEXT_PUBLIC_API_URL=https://amnaaplus-todo-backend.hf.space

# Development Mode - Bypass authentication for local development
# Set to "true" when running locally without a shared PostgreSQL database
# WARNING: Never enable in production!
DEV_MODE=false
# Optional: Custom user ID for dev mode (defaults to "dev-user-local")
# DEV_USER_ID=dev-user-local
